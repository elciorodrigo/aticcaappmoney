<?xml version='1.0' encoding='utf-8'?>
<widget id="com.example.attica" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Arduino App</name>
    <description>
        A Sample web requeste for Aticca.
    </description>
    <author email="elciorodrigo@gmail.com" href="http://cordova.io">
        Elcio Rodrigo
    </author>
    <content src="app.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>

    <icon src="livethechange.png" />
</widget>